<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/textureView_rear"
        android:layout_width="225dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textureView_front"
        android:adjustViewBounds="true"
        android:foregroundGravity="left" />

    <TextureView
        android:id="@+id/textureView_front"
        android:layout_width="225dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="50"
        android:adjustViewBounds="true" />

    <FrameLayout
        android:id="@+id/control"
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:background="#cc4285f4"
        android:foregroundGravity="right"
        android:visibility="visible">


        <ImageButton
            android:id="@+id/imageButton"
            style="@style/Base.DialogWindowTitleBackground.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <Button
            android:id="@+id/switch_camera"
            style="@android:style/MediaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Both"
            android:visibility="visible" />


        <ImageButton
            android:id="@+id/videorec"
            style="@style/Base.DialogWindowTitleBackground.AppCompat"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:srcCompat="@mipmap/record" />


    </FrameLayout>




</android.widget.RelativeLayout>